-- Define the RF Out Block
PROC rfOut(CHAN INT outC!, CHAN INT DTopC!, CHAN INT inC?)
  INT symbolTime  :
  INT samplingRate:
  INT carrierFreq :
  INT rcFiltCoeff :  -- provides the name of the file with the coeff rcFilt<int>.dat
  INT carrierGain :
  INT rfGain      :
  
  SEQ
    inC  ? symbolTime
    outC ! symbolTime
    
    inC  ? samplingRate
    outC ! samplingRate
    
    inC  ? carrierFreq
    outC ! carrierFreq
    
    inC  ? rcFiltCoeff
    outC ! rcFiltCoeff
    
    inC  ? carrierGain
    outC ! carrierGain
    
    inC  ? rfGain
    outC ! rfGain
    
    DTopC ! rfGain
:
