  INT carrierFreq :
  INT rcFiltCoeff :  -- provides the name of the file with the coeff rcFilt<int>.dat
  INT carrierGain :
  INT rfGain      :

  SEQ
    -- We're rcv/fw radio configuration parameters through the channel

    inC ? symbolTime
    --DParamOC ! symbolTime
    outC     ! symbolTime

    inC ? samplingRate    
    --DParamOC ! samplingRate
    outC     ! samplingRate
        
    inC ? carrierFreq
    --DParamOC ! carrierFreq
    outC     ! carrierFreq
    
    inC ? rcFiltCoeff
    --DParamOC ! rcFiltCoeff
    outC     ! rcFiltCoeff
    
    inC ? carrierGain
    --DParamOC ! carrierGain
    outC     ! carrierGain

    inC ? rfGain
    --DParamOC ! rfGain
    outC     ! rfGain
    
    DTopC ! rfGain
:

